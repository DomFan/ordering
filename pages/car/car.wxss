/* pages/shopcart/car.wxss */
view {
  display: block;
}

.shopcart {
  position: relative;
  background-color: #e02d3f;
  height: 90rpx;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 9;
}
.shopcart-main {
  display: flex;
  height: 90rpx;
}
.shopcart-left {
  flex: 2;
  position: relative;
}
.shopcart__icon {
  padding-top: 16rpx;
  padding-left: 40rpx;
  height: 64rpx;
  width: 80rpx;
}
.shopcart__count {
  position: absolute;
  top: 10rpx;
  left: 105rpx;
  height: 30rpx;
  width: 30rpx;
  font-size: 24rpx;
  border-radius: 198rpx;
  background-color: #ff7b0f;
  color: #fff;
  text-align: center;
  line-height: 30rpx;
}
.shopcart-middle {
  flex: 5;
  background-color: #e02d3f;
  border-right: 1rpx solid #fff;
}
.shopcart__price {
  line-height: 90rpx;
  text-align: left;
  color: #fff;
}
.shopcart__price text {
  font-size: 48rpx;
}

.shopcart-right {
  position: relative;
  flex: 3;
  line-height: 90rpx;
}
.shopcart-right text {
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 300;
  margin-left: 28rpx;
}
.shopcart-right:after {
  content: '';
  position: absolute;
  top: 30rpx;
  left: 156rpx;
  height: 24rpx;
  width: 24rpx;
  opacity: .7;
  border-top: 4rpx solid #fff;
  border-right: 4rpx solid #fff;
  transform: rotateZ(45deg)
}
.item {
  background-color: rebeccapurple ;
}

.list-mask {
  position: relative;
  width: 100%;
  /* height: 110rpx; */
  left: 0rpx;
  background-color: #fff;
  z-index: 5;
}

.shopcart__items {
  width: 100%; 
}
.shopcart__items {
  background-color: rgba(0,0,0,.7);
}
.shopcart__item {
  padding: 0 20rpx;
  height: 130rpx;
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f0e9;
}
.cart__left {
  margin-left: 8rpx;
  margin-top: 16rpx;
  flex: 1;
}

.cart__right {
    margin-top: 28rpx;
}
.cart__right .food__delete, .cart__right text,.cart__right .food__add {
  float: left;
  margin-right: 12rpx;
}
.shopcart__items:after,.cart__right:after {
  clear: both;
  content: ' ';
  display: table;
}
.item__h3 {
  font-weight: 500;
  font-size: 28rpx;
}
.item__price {
  font-size: 36rpx;
  color: #e02d3f;
}

.clearWrap {
  width: 100%;
  position: relative;
}
.clearWrap button {
  margin-top: 20rpx;
}
.clear, .count {
  width: 80%;
}

.noFood {
  width: 100%;
  height: 100%;
  text-align: center;
  padding-top: 300rpx;
}
.food__add {
  border: 1rpx solid black;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 50%;
  text-align: center;
}
.num {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
