/* pages/mine/mine.wxss */
.top-mode{
  background: #FF9C35;
  height:300rpx;
  display: block;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.card-info{
  width: 80%;
  /* height: 180rpx; */
  height: 50rpx;
  box-shadow: 0.5px 0.5px 0.5px 0.5px rgba(255, 156, 53, 10);
  z-index: 1000;
  background: white;
  padding: 10px;
}
.card-box{
  margin-top:-20px;
}
.none {
  display: none;
}
.down-center {
  /* height:50%; */
  /* border-bottom:1px solid #E3E3E3; */
}

.listWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
  align-items: center;
}
.listItem {
  width: 85%;
  height: 100rpx;
  line-height: 100rpx;
  overflow: hidden;
  border-bottom: 1rpx solid #FF9C35;
}

.title {
  float: left;
}
.btn {
  margin-top: 23rpx;
  float: right;
}

.foodItems {
  width: 80%;
}
.foodItem {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between;
  align-items: center; */
  padding-bottom: 10rpx;
}
.foodName {
  width: 100%;
}
.foodNum {
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.foodCount {
  float: left;
}
.foodPrice {
  float: right;
}
.num {
  color: #FF9C35;
}
.foodTotal {
  padding: 10rpx 0;
  overflow: hidden;
}
.left {
  float: left;
}
.right {
  float: right;
}
.noFood {
  text-align: center;
  padding-bottom: 10rpx;
}
